<UserControl x:Class="MyWpfProject.View.MainView.MyFinanceView.PurposeInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWpfProject.View.MainView.MyFinanceView"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Background="#333333">
        <Border Grid.RowSpan="2" Margin="10" Background="#FF673AB7" CornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ProgressBar x:Name="purposeProgressBar" Grid.Row="0" Height="40" Margin="10" />
                <TextBlock x:Name="percentString" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#8758b1" FontSize="20" />
            </Grid>

        </Border>
    </Grid>
</UserControl>
